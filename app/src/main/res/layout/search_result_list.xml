<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    >



    <ImageView
        android:id="@+id/iv_favourite_list"
        android:clickable="true"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/favourite"
        app:layout_constraintBottom_toBottomOf="@+id/tv_result_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_result_data"
        app:srcCompat="@android:drawable/star_big_off" />


    <TextView
        android:id="@+id/tv_result_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_favourite_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="textview okay" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#dadada"
        app:layout_constraintEnd_toEndOf="@id/iv_favourite_list"
        app:layout_constraintStart_toStartOf="@id/tv_result_data"
        app:layout_constraintTop_toBottomOf="@id/tv_result_data" />

</android.support.constraint.ConstraintLayout>